<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <%= stylesheet_link_tag 'revealjs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "revealjs" %>
    <title>Slides</title>
  </head>
  <body>
    <div class="reveal">
      <!-- Any section element inside of this container is displayed as a slide -->
      <div class="slides">
        <%= yield %>
      </div>
    </div>
    <script>
      Reveal.initialize({
        hash: true,
        progress: true
      });
    </script>
  </body>
</html>
